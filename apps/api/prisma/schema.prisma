// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String       @id @unique
  slug                    String       @unique
  name                    String
  email                   String
  phone                   String?
  avatar                  String?
  bio                     String?
  address                 String?
  pronoun                 Pronoun?
  tShirt                  SizeChart?
  foodPreference          FoodPreference  @default(ANYTHING)


  github                  String?
  linkedIn                String?
  twitter                 String?
  portfolio               String?
  resume                  String?

  city                    String?
  pincode                 Int?
  
  emergencyContact        String?
  emergencyContactName    String?

  skills                  Skill[]
}

model Skill {
  id                      String @id @unique @default(dbgenerated("gen_random_uuid()::TEXT"))
  name                    String @unique
  user                    User[]
}

model Experience {
  id                      String @id @unique @default(dbgenerated("gen_random_uuid()::TEXT"))
  employer                String
  role                    String
  from                    DateTime
  to                      DateTime?
  description             String?
}

enum SizeChart{
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum FoodPreference {
  VEG
  NONVEG
  ANYTHING
}

enum Pronoun {
  HE_HIM
  SHE_HER
  THEY_THEM
}